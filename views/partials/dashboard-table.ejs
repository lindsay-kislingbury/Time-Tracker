<!--Table-->
<div class="container-fluid px-0 mx-0 overflow-auto" id="recent-table">
    <table class="table table-borderless rounded" id="stamps">
        <thead class="sticky-top text-bg-dark py-0">
            <tr>
            <th colspan="3" class="text-center">Recent</th>
            </tr>
        </thead>
        <tbody class="table-borderless" style="background-color: rgba(255, 255, 255, 0.3);">
            <%if(count<=0){%>
                <td colspan="4">
                    <p class="text-center">No Entries Yet</p>
                </td>
            <%}else{%>
                <%if(count>10){%>
                    <%count=10;%>
                <%}%>
                <% for (var i=count-1; i>=0; i--){%>
                    <tr class="bg-transparent text-dark">
                        <td class="col-4 py-0 my-0 align-middle">
                            <span class="text-capitalize fw-bold">
                                <%-timestamps[i].title%>
                            </span>
                        </td>
                        <td class="col-1 p-0 text-start m-0 align-middle">
                            <span class="time-font fs-5">
                                <%-new Date(timestamps[i].elapsedTime * 1000).toISOString().slice(11, 19)%>
                            </span>
                        </td>
                        <td class="col-1 align-end">
                            <button class="btn bg-transparent" id="button-dash-edit" onclick="openModal('<%-timestamps[i]._id%>')" data-bs-toggle="modal" data-bs-target="#editModal">
                                <i class="fa-solid fa-ellipsis-vertical fa-lg"></i>
                            </button>
                        </td>
                    </tr>
                    <tr class="p-0 m-0"> 
                        <td colspan="4" class="py-0 my-0">
                            <span class="text-capitalize badge badge-primary">
                                <%-timestamps[i].project%>
                            </span>
                            <% for (var j=0; j<timestamps[i].tags.length; j++){ %>
                                <span class="badge badge-secondary rounded-pill"><%-timestamps[i].tags[j]%></span>
                            <% } %>
                            <hr class="border border-dark border-2 mt-1 mb-2">
                        </td>
                    </tr>
                <%}%>
            <%}%>
        </tbody>
    </table>
</div>

