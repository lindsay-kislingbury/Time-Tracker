<div class="card text-center">
    <div class="card-header">
      Track Time
    </div>
    <div class="card-body align-items-center justify-content-center">
    <!--Title Input-->
    <div class="d-flex flex-column">
      <div class="px-2">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
          </div>
          <input type="text" id='title' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
      </div>
      <!--Category Input-->
      <div class="px-2">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Category</span>
          </div>
          <input type="text" id='category' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
      </div>
    </div>
    <!--Time Container-->
    <div class="d-flex flex-row align-items-center justify-content-center bg-light p-3 rounded-3">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <!--Time-->
            <div class="d-inline-block" style="min-width: 200px;">
                <h3><span id="minute">00</span>&nbsp;:
                <span id="second">00</span>&nbsp;:
                <span id="ms">00</span></h3>
            </div> 
            <!--Start/Stop Buttons-->
            <div class="d-flex align-items-center justify-content-start">
                <a id = 'startButton' title="Start" style="font-size: 2rem; color: cornflowerblue;">
                    <i class="bi bi-play"></i>
                </a>
                <a id = 'stopButton' title="Stop" style="font-size: 2rem; color: darkred;">
                    <i class="bi bi-stop"></i>
                </a>
            </div>
    </div>
    <!--Send Button-->
    <a id = 'sendButton' title="Save">
    <i class="bi bi-save" style="font-size: 2rem;"></i>
    </a>
    </div>
</div>
</div>
  <!--End Card-->