<script type="module">
  import Tags from "https://cdn.jsdelivr.net/gh/lekoala/bootstrap5-tags@master/tags.js";
  Tags.init("select", {
    activeClasses: ["bg-secondary", "text-white"],
    placeholder: "Add some tags...",
    allowNew: true,
    allowClear: true,
    clearEnd: true,
    fixed: true,
    separator:" |,|  ",
    badgeStyle: "secondary",
    fuzzy: true,
    fullWidth: true
  });
</script>


<div class="stopwatch">
<div class="py-3 px-3 mt-2 me-3 border border-dark border-2 border-opacity-50 text-bg-light m-auto">
  <div class="container p-0 min-w-60vw">
    <form>
      <div class="mh-30 d-flex flex-wrap">
        <!--Title Input-->
        <div class="input-group input-group-md mb-3">
          <span class="input-group-text border-dark-subtle">
            <i class="fa-solid fa-pen-to-square"></i>
          </span>
          <input type="text" class="form-control border-dark-subtle" id="title" maxlength="25">
        </div>
        <!--Category Input-->
        <div class="input-group input-group-md">
          <div class="input-group input-group-md mb-3 me-1">
            <span class="input-group-text border-dark-subtle">
              <i class="fa-solid fa-tags"></i>
            </span>
            <select class="form-select border-dark-subtle" id="tags" multiple>
              <%timestamps.forEach(timestamp =>{%>
                <%timestamp.tags.forEach(tag =>{%>
                  <option value='<%- tag %>'><%- tag %></option>
                <%})%>
              <%});%>
            </select>
          </div>
        </div>
      </div>
    </div>
    
    <div class="container-fluid">
      <div class="card-header border border-dark-subtle align-items-center border-bottom text-bg-light m-0 p-0">
        <div class="timer px-8" onclick="startTimer()">
          00:00:00:00
        </div>
      </div>   
      <div class="card-body d-flex border-end border-dark-subtle border-start border-bottom justify-content-around align-items-center text-bg-light p-0">
        <div class="startTimer reset px-2" onclick="startTimer()">
          <i class="fas fa-play"></i>
        </div>
        <div class="pauseTimer reset px-2" onclick="pauseTimer()">
          <i class="fas fa-pause"></i>
        </div>
        <div class="resetTimer reset px-2" onclick="resetTimer()">
          Reset
        </div>
        <div class="vr border border-1 border-secondary"></div>
        <button type="button" class="btn fs-1" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="send()">
          <i class="fa-solid fa-floppy-disk" style="color:#7a487a;"></i>
        </button>
      </div>
    </div>
  </form>
</div>
</div>








